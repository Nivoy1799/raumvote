generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



model Vote {
  id          String   @id @default(cuid())
  treeId      String
  treeVersion String
  optionId    String
  voterHash   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([treeId, treeVersion, voterHash]) // 1 Vote pro Tree/Version pro User
}

model Like {
  id          String   @id @default(cuid())
  treeId      String
  treeVersion String
  optionId    String
  voterHash   String
  createdAt   DateTime @default(now())

  @@unique([treeId, treeVersion, optionId, voterHash]) // 1 Like pro Option pro User
}


model User {
  id        String   @id @default(cuid())
  voterHash String   @unique
  username  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

