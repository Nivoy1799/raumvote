generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



model Vote {
  id          String   @id @default(cuid())
  treeId      String
  treeVersion String
  optionId    String
  voterHash   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([treeId, treeVersion, voterHash]) // 1 Vote pro Tree/Version pro User
}

model Like {
  id          String   @id @default(cuid())
  treeId      String
  treeVersion String
  optionId    String
  voterHash   String
  createdAt   DateTime @default(now())

  @@unique([treeId, treeVersion, optionId, voterHash]) // 1 Like pro Option pro User
}


model User {
  id        String   @id @default(cuid())
  voterHash String   @unique
  username  String?
  avatarUrl String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id          String        @id @default(cuid())
  treeId      String
  treeVersion String
  optionId    String
  voterHash   String
  text        String        @db.Text
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  likes       CommentLike[]

  @@index([treeId, treeVersion, optionId, createdAt])
}

model CommentLike {
  id        String   @id @default(cuid())
  commentId String
  voterHash String
  createdAt DateTime @default(now())
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([commentId, voterHash])
}

